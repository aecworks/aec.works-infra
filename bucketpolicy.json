{
    "Version": "2012-10-17",
    "Id": "bucketpolicy",
    "Statement": [
        {
            "Effect": "Allow",
            "Principal": {
                "AWS": "${svc_role_arn}"
            },
            "Action": [
                "s3:PutObject",
                "s3:GetObjectAcl",
                "s3:GetObject",
                "s3:ListBucket",
                "s3:DeleteObject",
                "s3:PutObjectAcl"
            ],
            "Resource": [
                "${bucket_arn}",
                "${bucket_arn}/*"
            ]
        }
    ]
  }
